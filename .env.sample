# EPV Research Platform Environment Variables
# Copy this file to .env and fill in your API keys

# Alpha Vantage API Key (optional - for additional data sources)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# FRED API Key (optional - for economic data)
FRED_API_KEY=your_fred_key_here

# Quandl API Key (optional - for additional financial data)
QUANDL_API_KEY=your_quandl_key_here

# Database configuration (optional - defaults to SQLite)
# DATABASE_URL=sqlite:///epv_platform.db

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cache settings
CACHE_EXPIRY_HOURS=24
MAX_CACHE_SIZE_MB=1000

# JWT signing secret (required for authentication)
JWT_SECRET=please_generate_a_secure_random_string
